        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #e0e0e0;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ComboBox fx:id="itemsComboBox" promptText="Select item" minWidth="150"/>
        </HBox>
    </top> -->
    <top>
    <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #e0e0e0;">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <ComboBox fx:id="itemsComboBox" promptText="Select item" minWidth="150"/>
        <Button fx:id="addButton" text="Add" onAction="#handleAddAction" />
    </HBox>
</top>

    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <VBox spacing="10" alignment="CENTER">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Unit" minWidth="80"/>
                    <Label fx:id="unitValueLabel" text="0.00" minWidth="50"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Purchased units" minWidth="80"/>
                    <Label fx:id="purchaseQuantityValueLabel" text="0" minWidth="50"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Price/unit" minWidth="80"/>
                    <Label fx:id="purchasePriceValueLabel" text="0.00" minWidth="50"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Select Units" minWidth="80"/>
                    <Slider fx:id="quantitySlider" minWidth="150"/>
                </HBox>
            </VBox>
            
            <TableView fx:id="itemsTableView" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Item name" fx:id="itemNameColumn"/>
                    <TableColumn text="Purchased units" fx:id="purchasedUnitsColumn"/>
                    <TableColumn text="Purchase price" fx:id="purchasePriceColumn"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
